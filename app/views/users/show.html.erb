<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>
  <div class="center hero-unit">
    <%= link_to "Create a Proposition", new_user_proposition_path(@user), class: "btn btn-small btn-primary" %>
  </div>

  <div class="span8">
    <h3>Propositions (<%= @user.propositions.count %>)</h3>
    <ol class="propositions">
      <%= render @propositions %>
      </ol>
</div>
